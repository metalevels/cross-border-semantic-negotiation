<?xml version="1.0"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:owl="http://www.w3.org/2002/07/owl#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:schema="http://schema.org/"
         xmlns:foaf="http://xmlns.com/foaf/0.1/"
         xmlns:eurov="http://data.europa.eu/m8g/"
         xmlns:anpr="http://anpr.interno.gov.it/ontology#"
         xml:base="http://anpr.interno.gov.it/ontology#">

    <owl:Ontology rdf:about="http://anpr.interno.gov.it/ontology#">
        <rdfs:label xml:lang="it">Ontologia ANPR - Certificato di Nascita</rdfs:label>
        <rdfs:label xml:lang="en">ANPR Ontology - Birth Certificate</rdfs:label>
        <rdfs:comment xml:lang="en">
            Italian National Registry of Resident Population (ANPR) ontology for birth certificates.
            Compliant with Italian AgID guidelines and SPID integration.
        </rdfs:comment>
        <owl:versionInfo>1.0</owl:versionInfo>
    </owl:Ontology>

    <!-- Birth Certificate Document Class -->
    <owl:Class rdf:about="anpr:CertificatoNascita">
        <rdfs:label xml:lang="it">Certificato di Nascita</rdfs:label>
        <rdfs:label xml:lang="en">Birth Certificate</rdfs:label>
        <rdfs:comment>Official birth certificate issued by Italian municipalities through ANPR</rdfs:comment>
        <rdfs:subClassOf rdf:resource="schema:CreativeWork"/>
    </owl:Class>

    <!-- Person Class -->
    <owl:Class rdf:about="anpr:Persona">
        <rdfs:label xml:lang="it">Persona</rdfs:label>
        <rdfs:label xml:lang="en">Person</rdfs:label>
        <rdfs:comment>Individual person registered in Italian ANPR system</rdfs:comment>
        <rdfs:subClassOf rdf:resource="foaf:Person"/>
    </owl:Class>

    <!-- Data Properties for Birth Certificate -->
    
    <!-- Family Name -->
    <owl:DatatypeProperty rdf:about="anpr:cognome">
        <rdfs:label xml:lang="it">Cognome</rdfs:label>
        <rdfs:label xml:lang="en">Family Name</rdfs:label>
        <rdfs:comment>Family name (surname) as registered in Italian civil records</rdfs:comment>
        <rdfs:domain rdf:resource="anpr:Persona"/>
        <rdfs:range rdf:resource="xsd:string"/>
        <rdfs:seeAlso rdf:resource="foaf:familyName"/>
        <rdfs:seeAlso rdf:resource="schema:familyName"/>
        <anpr:required rdf:datatype="xsd:boolean">true</anpr:required>
        <anpr:maxLength rdf:datatype="xsd:int">50</anpr:maxLength>
    </owl:DatatypeProperty>

    <!-- Given Name -->
    <owl:DatatypeProperty rdf:about="anpr:nome">
        <rdfs:label xml:lang="it">Nome</rdfs:label>
        <rdfs:label xml:lang="en">Given Name</rdfs:label>
        <rdfs:comment>Given name(s) as registered in Italian civil records</rdfs:comment>
        <rdfs:domain rdf:resource="anpr:Persona"/>
        <rdfs:range rdf:resource="xsd:string"/>
        <rdfs:seeAlso rdf:resource="foaf:givenName"/>
        <rdfs:seeAlso rdf:resource="schema:givenName"/>
        <anpr:required rdf:datatype="xsd:boolean">true</anpr:required>
        <anpr:maxLength rdf:datatype="xsd:int">50</anpr:maxLength>
    </owl:DatatypeProperty>

    <!-- Birth Date -->
    <owl:DatatypeProperty rdf:about="anpr:data_nascita">
        <rdfs:label xml:lang="it">Data di Nascita</rdfs:label>
        <rdfs:label xml:lang="en">Birth Date</rdfs:label>
        <rdfs:comment>Date of birth in Italian format DD/MM/YYYY</rdfs:comment>
        <rdfs:domain rdf:resource="anpr:Persona"/>
        <rdfs:range rdf:resource="xsd:string"/>
        <rdfs:seeAlso rdf:resource="schema:birthDate"/>
        <anpr:required rdf:datatype="xsd:boolean">true</anpr:required>
        <anpr:format>DD/MM/YYYY</anpr:format>
        <anpr:pattern>^(0[1-9]|[12][0-9]|3[01])/(0[1-9]|1[012])/[0-9]{4}$</anpr:pattern>
    </owl:DatatypeProperty>

    <!-- Place of Birth -->
    <owl:DatatypeProperty rdf:about="anpr:luogo_nascita">
        <rdfs:label xml:lang="it">Luogo di Nascita</rdfs:label>
        <rdfs:label xml:lang="en">Place of Birth</rdfs:label>
        <rdfs:comment>Place of birth - Italian municipality name</rdfs:comment>
        <rdfs:domain rdf:resource="anpr:Persona"/>
        <rdfs:range rdf:resource="xsd:string"/>
        <rdfs:seeAlso rdf:resource="schema:birthPlace"/>
        <anpr:required rdf:datatype="xsd:boolean">true</anpr:required>
        <anpr:maxLength rdf:datatype="xsd:int">100</anpr:maxLength>
    </owl:DatatypeProperty>

    <!-- Italian Tax Code -->
    <owl:DatatypeProperty rdf:about="anpr:codice_fiscale">
        <rdfs:label xml:lang="it">Codice Fiscale</rdfs:label>
        <rdfs:label xml:lang="en">Italian Tax Code</rdfs:label>
        <rdfs:comment>Italian tax identification code (Codice Fiscale)</rdfs:comment>
        <rdfs:domain rdf:resource="anpr:Persona"/>
        <rdfs:range rdf:resource="xsd:string"/>
        <rdfs:seeAlso rdf:resource="eurov:taxIdentifier"/>
        <anpr:required rdf:datatype="xsd:boolean">true</anpr:required>
        <anpr:pattern>^[A-Z]{6}[0-9]{2}[A-Z][0-9]{2}[A-Z][0-9]{3}[A-Z]$</anpr:pattern>
        <anpr:length rdf:datatype="xsd:int">16</anpr:length>
    </owl:DatatypeProperty>

    <!-- Gender -->
    <owl:DatatypeProperty rdf:about="anpr:sesso">
        <rdfs:label xml:lang="it">Sesso</rdfs:label>
        <rdfs:label xml:lang="en">Gender</rdfs:label>
        <rdfs:comment>Gender designation according to Italian civil law</rdfs:comment>
        <rdfs:domain rdf:resource="anpr:Persona"/>
        <rdfs:range rdf:resource="xsd:string"/>
        <rdfs:seeAlso rdf:resource="schema:gender"/>
        <anpr:required rdf:datatype="xsd:boolean">false</anpr:required>
        <anpr:enumeration>M</anpr:enumeration>
        <anpr:enumeration>F</anpr:enumeration>
    </owl:DatatypeProperty>

    <!-- Citizenship -->
    <owl:DatatypeProperty rdf:about="anpr:cittadinanza">
        <rdfs:label xml:lang="it">Cittadinanza</rdfs:label>
        <rdfs:label xml:lang="en">Citizenship</rdfs:label>
        <rdfs:comment>Citizenship/nationality according to Italian law</rdfs:comment>
        <rdfs:domain rdf:resource="anpr:Persona"/>
        <rdfs:range rdf:resource="xsd:string"/>
        <rdfs:seeAlso rdf:resource="eurov:nationality"/>
        <anpr:required rdf:datatype="xsd:boolean">false</anpr:required>
        <anpr:defaultValue>Italiana</anpr:defaultValue>
    </owl:DatatypeProperty>

    <!-- Complex Property for Parents -->
    <owl:ObjectProperty rdf:about="anpr:genitori">
        <rdfs:label xml:lang="it">Genitori</rdfs:label>
        <rdfs:label xml:lang="en">Parents</rdfs:label>
        <rdfs:comment>Parent information structured as object with padre/madre keys</rdfs:comment>
        <rdfs:domain rdf:resource="anpr:Persona"/>
        <rdfs:range rdf:resource="anpr:GenitoriInfo"/>
        <rdfs:seeAlso rdf:resource="schema:parent"/>
        <anpr:required rdf:datatype="xsd:boolean">false</anpr:required>
    </owl:ObjectProperty>

    <!-- Parents Information Class -->
    <owl:Class rdf:about="anpr:GenitoriInfo">
        <rdfs:label xml:lang="it">Informazioni Genitori</rdfs:label>
        <rdfs:label xml:lang="en">Parents Information</rdfs:label>
        <rdfs:comment>Structured information about parents</rdfs:comment>
    </owl:Class>

    <!-- Father Name -->
    <owl:DatatypeProperty rdf:about="anpr:padre">
        <rdfs:label xml:lang="it">Padre</rdfs:label>
        <rdfs:label xml:lang="en">Father</rdfs:label>
        <rdfs:comment>Father's full name</rdfs:comment>
        <rdfs:domain rdf:resource="anpr:GenitoriInfo"/>
        <rdfs:range rdf:resource="xsd:string"/>
        <anpr:maxLength rdf:datatype="xsd:int">100</anpr:maxLength>
    </owl:DatatypeProperty>

    <!-- Mother Name -->
    <owl:DatatypeProperty rdf:about="anpr:madre">
        <rdfs:label xml:lang="it">Madre</rdfs:label>
        <rdfs:label xml:lang="en">Mother</rdfs:label>
        <rdfs:comment>Mother's full name</rdfs:comment>
        <rdfs:domain rdf:resource="anpr:GenitoriInfo"/>
        <rdfs:range rdf:resource="xsd:string"/>
        <anpr:maxLength rdf:datatype="xsd:int">100</anpr:maxLength>
    </owl:DatatypeProperty>

    <!-- Administrative Properties -->
    
    <!-- Municipality Code -->
    <owl:DatatypeProperty rdf:about="anpr:codice_comune_nascita">
        <rdfs:label xml:lang="it">Codice Comune di Nascita</rdfs:label>
        <rdfs:label xml:lang="en">Birth Municipality Code</rdfs:label>
        <rdfs:comment>ISTAT code of birth municipality</rdfs:comment>
        <rdfs:domain rdf:resource="anpr:Persona"/>
        <rdfs:range rdf:resource="xsd:string"/>
        <anpr:required rdf:datatype="xsd:boolean">false</anpr:required>
        <anpr:pattern>^[0-9]{6}$</anpr:pattern>
    </owl:DatatypeProperty>

    <!-- Province -->
    <owl:DatatypeProperty rdf:about="anpr:provincia_nascita">
        <rdfs:label xml:lang="it">Provincia di Nascita</rdfs:label>
        <rdfs:label xml:lang="en">Birth Province</rdfs:label>
        <rdfs:comment>Province where birth occurred</rdfs:comment>
        <rdfs:domain rdf:resource="anpr:Persona"/>
        <rdfs:range rdf:resource="xsd:string"/>
        <anpr:required rdf:datatype="xsd:boolean">false</anpr:required>
        <anpr:maxLength rdf:datatype="xsd:int">50</anpr:maxLength>
    </owl:DatatypeProperty>

    <!-- Marital Status -->
    <owl:DatatypeProperty rdf:about="anpr:stato_civile">
        <rdfs:label xml:lang="it">Stato Civile</rdfs:label>
        <rdfs:label xml:lang="en">Marital Status</rdfs:label>
        <rdfs:comment>Current marital status</rdfs:comment>
        <rdfs:domain rdf:resource="anpr:Persona"/>
        <rdfs:range rdf:resource="xsd:string"/>
        <anpr:required rdf:datatype="xsd:boolean">false</anpr:required>
        <anpr:enumeration>Celibe/Nubile</anpr:enumeration>
        <anpr:enumeration>Coniugato/a</anpr:enumeration>
        <anpr:enumeration>Divorziato/a</anpr:enumeration>
        <anpr:enumeration>Vedovo/a</anpr:enumeration>
    </owl:DatatypeProperty>

    <!-- Custom annotation properties for ANPR system -->
    <owl:AnnotationProperty rdf:about="anpr:required"/>
    <owl:AnnotationProperty rdf:about="anpr:maxLength"/>
    <owl:AnnotationProperty rdf:about="anpr:pattern"/>
    <owl:AnnotationProperty rdf:about="anpr:format"/>
    <owl:AnnotationProperty rdf:about="anpr:enumeration"/>
    <owl:AnnotationProperty rdf:about="anpr:defaultValue"/>
    <owl:AnnotationProperty rdf:about="anpr:length"/>

</rdf:RDF>